<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.hoola.hoola.Views.DetalleActivity">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/hoola"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/slider"
        app:layout_constraintLeft_toLeftOf="@+id/slider"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toTopOf="@+id/tabHost"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDetalle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tipo"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tipoTxt"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/hoola"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/slider"
        app:layout_constraintLeft_toLeftOf="@+id/slider"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toTopOf="@+id/tabHost"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDetalle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        android:id="@+id/cardCaracteristica">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="caracteristica"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tipoTxt"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/hoola"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarDetalle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabHost"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:tabIndicatorColor="@color/hoola"
        app:tabSelectedTextColor="@color/hoola"
        android:textAlignment="center"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerTabs"
        android:layout_below="@+id/tabHost"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tabHost"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDetalle"
        app:layout_constraintHorizontal_bias="0.0">

    </com.daimajia.slider.library.SliderLayout>

</android.support.constraint.ConstraintLayout>
