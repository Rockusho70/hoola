<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#fff">

    <TextView
        android:text="Hace 2 días"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:textSize="10sp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp" />

    <ImageView
        app:srcCompat="@drawable/casa1"
        android:id="@+id/imagenCasa"
        android:layout_height="120dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_width="140dp"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:text="@string/titulo_renta"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenCasa"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/habitacion"
        android:id="@+id/habitacionImagen"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        android:layout_marginStart="6dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenCasa"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/piso"
        android:id="@+id/pisoImagen"
        app:layout_constraintLeft_toRightOf="@+id/imagenCasa"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/habitacionImagen" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/bano"
        android:id="@+id/banioImagen"
        app:layout_constraintLeft_toRightOf="@+id/imagenCasa"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/pisoImagen" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/estacionamiento"
        android:id="@+id/estacionamientoImagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imagenCasa"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/banioImagen"
        android:layout_marginBottom="4dp" />

    <TextView
        android:text="Habitaciones:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/habitacionTxt"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/habitacionImagen"
        android:textColor="#000"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Pisos:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pisoTxt"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/pisoImagen"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/habitacionTxt"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Baños:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baniosTxt"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/banioImagen"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/pisoTxt"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Estacionamientos:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estacionamientoTxt"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/estacionamientoImagen"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/baniosTxt"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="$ 0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precioTxt"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/titulo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="MXN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mxnTxt"
        android:textSize="8sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/precioTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/precioTxt"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1.0"
        android:textColor="#000" />

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/hoola"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.96"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imagenCasa"
        app:layout_constraintBottom_toBottomOf="@+id/imagenCasa"
        app:layout_constraintLeft_toLeftOf="@+id/imagenCasa"
        app:layout_constraintRight_toRightOf="@+id/imagenCasa"
        android:layout_marginEnd="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tipo"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:textColor="#fff"
                android:id="@+id/tipoTxt"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>