<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#fff">

    <ImageView
        app:srcCompat="@drawable/casa1"
        android:id="@+id/imagenBodega"
        android:layout_height="120dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_width="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tituloBodega"
        android:text="@string/titulo_renta"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000"
        app:layout_constraintLeft_toRightOf="@+id/imagenBodega"
        android:layout_marginStart="8dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/habitacion"
        android:id="@+id/terrenoImagen"
        app:layout_constraintLeft_toRightOf="@+id/imagenBodega"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloBodega"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Habitaciones:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bodegaTxt"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/terrenoImagen"
        android:textColor="#000"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="$ 0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precioBodegaTxt"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tituloBodega" />

    <TextView
        android:text="MXN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monedaTxt"
        android:textSize="8sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/precioBodegaTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1.0"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/precioBodegaTxt" />

</android.support.constraint.ConstraintLayout>